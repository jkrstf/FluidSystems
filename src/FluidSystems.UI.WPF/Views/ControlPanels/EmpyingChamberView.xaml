<UserControl
    x:Class="FluidSystems.UI.WPF.Views.ControlPanels.EmpyingChamberViews"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluidSystems.UI.WPF.Views.ControlPanels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" MinWidth="100" />
        </Grid.ColumnDefinitions>
        <TextBlock Margin="4" Text="Select chamber" />
        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="4"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Chambers}"
            SelectedItem="{Binding SelectedChamber}" />
        <TextBlock
            Grid.Row="1"
            Margin="4"
            Text="Select sink" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="4"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Sinks}"
            SelectedItem="{Binding SelectedSink}" />
        <Button
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Height="25"
            Margin="4"
            Command="{Binding EmptyChamberCommand}"
            Content="Empty chamber" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="4"
            Foreground="Red"
            Text="{Binding StatusMessage}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>