<Window
    x:Class="FluidSystems.UI.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluidSystems.UI.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:FluidSystems.UI.WPF.UserControls"
    Title="{Binding Title}"
    Width="1200"
    Height="700"
    d:Height="600"
    d:Width="800"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="{Binding ExitCommand}" Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Command="{Binding AboutCommand}" Header="_About" />
            </MenuItem>
        </Menu>

        <StatusBar
            Padding="5,2"
            Background="#F3F3F3"
            DockPanel.Dock="Bottom">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding SystemName, StringFormat=System: {0}}" />
                    <TextBlock Text="{Binding SystemVersion, StringFormat=v{0}}" />
                </StackPanel>
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding LayoutVersion, StringFormat=Layout v{0}}" />
                </StackPanel>
            </StatusBarItem>
            <Separator />
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding SystemDescription}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <uc:DashBoardUserControl DataContext="{Binding DashBoardViewModel}" />
        </ScrollViewer>

    </DockPanel>
</Window>